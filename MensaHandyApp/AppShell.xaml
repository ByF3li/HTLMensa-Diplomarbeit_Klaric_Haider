<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MensaHandyApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MensaHandyApp.Views"
    xmlns:viewsMenu="clr-namespace:MensaHandyApp.Views.Menus"
    xmlns:viewsOrder="clr-namespace:MensaHandyApp.Views.Orders">



    <ShellContent
        Title="Homepage"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Wöchentliches Menü"
        ContentTemplate="{DataTemplate viewsMenu:WeeklyMenus}"
        Route="WeeklyMenus" />

    <ShellContent
        Title="Ihr Warenkorb"
        ContentTemplate="{DataTemplate viewsMenu:WarenkorbView}"
        Route="Warenkorb" />

    <!--
    <ShellContent
        Title="Ihre Bestellungen"
        ContentTemplate="{DataTemplate viewsOrder:WeeklyOrders}"
        Route="WeeklyOrders" />
    -->
    

    <ShellContent
        Title="Bestellverlauf"
        ContentTemplate="{DataTemplate viewsOrder:OrderHistory}"
        Route="OrderHistory" />

</Shell>
