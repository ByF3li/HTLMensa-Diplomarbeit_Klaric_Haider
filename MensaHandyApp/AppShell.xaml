<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MensaHandyApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MensaHandyApp.Views">


    <ShellContent
        Title="Homepage"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Wöchentliches Menü"
        ContentTemplate="{DataTemplate views:Carusell}"
        Route="Carusell" />

    <ShellContent
        Title="Ihr Warenkorb"
        ContentTemplate="{DataTemplate views:WarenkorbView}"
        Route="Warenkorb" />

    <!--
    <ShellContent
        Title="Ihre Bestellungen"
        ContentTemplate="{DataTemplate views:CurrentOrders}"
        Route="CurrentOrders" />
    -->
    

    <ShellContent
        Title="Bestellverlauf"
        ContentTemplate="{DataTemplate views:Orders}"
        Route="Orders" />

</Shell>
