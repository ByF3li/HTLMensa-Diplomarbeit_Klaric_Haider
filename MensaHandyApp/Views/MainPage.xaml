<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MensaHandyApp.Views.MainPage"
             Title="MainPage">
    <ScrollView>
        <VerticalStackLayout>
            <Label HorizontalOptions="Center" FontAttributes="Bold" FontSize="Medium">Willkommen bei der Mensa App</Label>
            <Image HorizontalOptions="CenterAndExpand" Source="mensa_logo.png"></Image>

            <Button Text="Zum Login" Command="{Binding LoginCommand}" Margin="50" FontSize="Large" IsVisible="{Binding ShowLoginButton}"/>
            <Button Text="Logout" Command="{Binding LogoutCommand}" Margin="50" FontSize="Large" IsVisible="{Binding ShowLogoutButton}"/>

            <Label HorizontalOptions="Center" Margin="20">Mittagessen von 11:00 - 14:00</Label>
            <Label HorizontalOptions="Center" Margin="20">Telefon: 0650 461 32 30</Label>
            <Label HorizontalOptions="Center" Margin="20">Email: info@htl-mensa.at</Label>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>