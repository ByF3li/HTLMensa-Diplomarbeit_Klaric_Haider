<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MensaHandyApp.Views.Login.LoginView"
             Title="LoginView">

    <StackLayout VerticalOptions="CenterAndExpand" Margin="20">
        <Entry Placeholder="(TSN) Benutzername" Text="{Binding Email}" Margin="0,0,0,10"/>
        <Entry Placeholder="(TSN) Password" Text="{Binding Password}" IsPassword="True" Margin="0,0,0,10"/>
        <Button Text="Login" Command="{Binding LoginCommand}" BackgroundColor="#3498db" TextColor="White"/>
    </StackLayout>

</ContentPage>