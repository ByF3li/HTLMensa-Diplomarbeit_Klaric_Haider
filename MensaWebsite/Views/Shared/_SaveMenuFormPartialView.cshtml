@model MenuDTO

<div class="form-group row">
    <label class="col-sm-2 col-form-label">Menü:</label>
    <div class="col-sm-6">
        <select asp-for="WhichMenu">
            <option value="1">Menü 1</option>
            <option value="2">Menü 2</option>
            <option value="3">Menü 3</option>
        </select>
    </div>
    <div class="col-sm-4">
        <span asp-validation-for="WhichMenu"></span>
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-2 col-form-label">Vorspeise:</label>
    <div class="col-sm-6">
        <input asp-for="Starter" placeholder="Suppe" class="form-control"/>
    </div>
    <div class="col-sm-4">
        <span asp-validation-for="Starter"></span>
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-2 col-form-label">Hauptspeise:</label>
    <div class="col-sm-6">
        <input asp-for="MainCourse" placeholder="Schnitzel" class="form-control" />
    </div>
    <div class="col-sm-4">
        <span asp-validation-for="MainCourse"></span>
    </div>
</div>

<div id="prices">
    <partial name="_PricesPartialView" model="@Model" />
</div>

<div class="form-group row">
    <label class="col-sm-2 col-form-label">Datum:</label>
    <div class="col-sm-6">
        <input asp-for="Date" class="form-control datepicker" />
    </div>
    <div class="col-sm-4">
        <span asp-validation-for="Date"></span>
    </div>

</div>

<br />

@if (TempData["SuccessAlert"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessAlert"]
    </div>
}
else if (TempData["NoSuccessAlert"] != null)
{
    <div class="alert alert-danger">
        @TempData["NoSuccessAlert"]
    </div>
}

<div class="mx-auto" style="width: 200px;">
    <button type="submit" class="btn btn-success btn-lg">Speichern!</button>
</div>
