@model MenuDTO

<div class="form-group row">
    <label class="col-sm-2 col-form-label">Menü:</label>
    <div class="col-sm-6">
        @Html.DropDownListFor(m => m.WhichMenu, new List<SelectListItem>
        {
        new SelectListItem { Text = "Menü 1", Value = "1", Selected=true},
        new SelectListItem { Text = "Menü 2", Value = "2"},
        new SelectListItem { Text = "Menü 3", Value = "3"}
        })
    </div>
    <div class="col-sm-4">
        <span asp-validation-for="WhichMenu"></span>
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-2 col-form-label">Vorspeiße:</label>
    <div class="col-sm-6">
        @Html.TextBoxFor(m => m.Starter, new {@placeholder = "Suppe", @class = "form-control"})
    </div>
    <div class="col-sm-4">
        <span asp-validation-for="Starter"></span>
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-2 col-form-label">Hauptspeiße:</label>
    <div class="col-sm-6">
        @Html.TextBoxFor(m => m.MainCourse, new {@placeholder = "Schnitzel", @class = "form-control"})
    </div>
    <div class="col-sm-4">
        <span asp-validation-for="MainCourse"></span>
    </div>
</div>

<div id="prices">
    <partial name="_PricesPartialView" model="@Model" />
</div>

<div class="form-group row">
    <label class="col-sm-2 col-form-label">Datum:</label>
    <div class="col-sm-6">
        @Html.TextBoxFor(m => m.Date, "{0:d}", new {@class = "form-control datepicker"})
    </div>
    <div class="col-sm-4">
        <span asp-validation-for="Date"></span>
    </div>

</div>

<br />

@if (TempData["SuccessAlert"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessAlert"]
    </div>
}
else if (TempData["NoSuccessAlert"] != null)
{
    <div class="alert alert-danger">
        @TempData["NoSuccessAlert"]
    </div>
}

<div class="mx-auto" style="width: 200px;">
    <button type="submit" class="btn btn-success btn-lg">Speichern!</button>
</div>
