@model MenuDTO

<div class="form-group row">
    <label class="col-sm-2 col-form-label">Preis für Schüler:</label>
    <input type="hidden" asp-for="PriceStudent" value="@Model.PriceStudent" />
    <label class="col-sm-10 col-form-label">@Model.PriceStudent.ToString("C")</label>
</div>

<div class="form-group row">
    <label class="col-sm-2 col-form-label">Preis für Lehrer:</label>
    <input type="hidden" asp-for="PriceTeacher" value="@Model.PriceTeacher" />
    <label class="col-sm-10 col-form-label">@Model.PriceTeacher.ToString("C")</label>
</div>